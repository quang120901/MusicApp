<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavouritesActivity"
    android:background="@drawable/background_img">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#C80F15"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/button_backtolist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_arrow_back"
            android:contentDescription="Back" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Favourite List"
            android:textColor="#FFF"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView_favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout2"/>

    <LinearLayout
        android:background="#C80F15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/button_listsongs"
            android:text="ListSong"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_library_music"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button_favouritesongs"
            android:text="Favourites"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_favorite"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

